<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movieku" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorOnPrimary">@color/accent</item>
        <item name="card">@color/lightCard</item>
        <item name="colorAccent">@color/accent</item>
        <item name="boldText">@color/boldTextLightMode</item>
        <item name="regularText">@color/regularTextLightMode</item>
        <item name="moreFocusedText">@color/moreDarkRegularTextLightMode</item>
        <item name="bg">@color/lightBg</item>
        <item name="dotsColor">@color/lightDotsRattingEmpty</item>
        <item name="searchbar">@color/searchbarLight</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/lightBg</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="ratting_dot" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:progressDrawable">@drawable/rate_dot</item>
        <item name="minHeight">10dp</item>
        <item name="maxHeight">10dp</item>
    </style>
</resources>